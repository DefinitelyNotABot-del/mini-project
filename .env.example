# Application Configuration
PORT=3019
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/student
DB_NAME=student

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Flask ML Server Configuration
FLASK_HOST=localhost
FLASK_PORT=5000
ML_API_URL=http://localhost:5000

# Tesseract OCR Path (Update based on your system)
# Windows: C:\\Program Files\\Tesseract-OCR\\tesseract.exe
# Linux: /usr/bin/tesseract
# Mac: /usr/local/bin/tesseract
TESSERACT_PATH=

# CORS Configuration
CORS_ORIGIN=http://localhost:3019

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (if implementing email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
